<br>
<div class="fullpage">
  <div class="jumbotron">
      <div class="jumbotron-caption">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
              <h1 class="delimiter">
                <%= @listing.title %>
              </h1>
              <div class="hidden-xs listing-title">
                  <%= @listing.user.name %>
              </div>
            </div>
            
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12", style="margin-top: 180px;">
            <div class="row rates">
              
              <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <span>$ <%= @listing.hourly_rate %></span>
                <span>/hour</span>
              </div>
        
              <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <span>$ <%= @listing.daily_rate %></span>
                <span>/day</span>
              </div>
        
              <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <span>$ <%= @listing.weekly_rate %></span>
                <span>/week</span>
              </div>
      
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="img_holder">
            
          </div>
          
        <div class="panel panel-default panel-description">
            <div class="panel-heading desc-title">
              <h2>Description</h2>
            </div>
            
            <div class="panel-body">
              <div class="container">
                <p><%= @listing.description %></p>
              </div>
            </div>
            
        </div>
        

          
        </div>
      </div>
      
    </div>

    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Request this order!</h3>
      </div>
        
      <div class="panel-body">
        <%= form_for(@order) do |f| %>
          <%= f.hidden_field :listing_id %>
            <div class="col-lg-12">
              <%= f.label :pickup %>
              <div class='input-group date' id='datetimepicker1'>
              <%= f.text_field :pickup, class: "form-control time-field" %>
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>                    
            </div>
          <br>
      
      <div class="col-lg-12">
        <%= f.label :dropoff %>
        <div class='input-group date' id='datetimepicker1'>
          <%= f.text_field :dropoff, class: "form-control time-field" %>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>                    
      </div>
    <div class="col-lg-12">
      <button type="submit" class="btn btn-primary">Request</button>
    </div>  
  <% end %>
            
  </div>
</div>
</div>
</div>
</div>

<script type="text/javascript">
    $(function () {
        $('.time-field').datetimepicker();
    });
</script>